{
  "version": 2,
  "buildCommand": "npm run build:client",
  "outputDirectory": "buchc_client_side/dist",
  "installCommand": "npm install && npm install --prefix buchc_client_side && npm install --prefix buchc_server_side",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "buchc_server_side/**"
    }
  }
}

